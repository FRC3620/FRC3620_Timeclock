<!-- $Id: log4j.xml,v 1.13.2.3 2003/05/02 00:53:12 slaboure Exp $ -->
<!--
 | For more configuration infromation and examples see the Jakarta Log4j | owebsite:
 http://jakarta.apache.org/log4j
-->
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="true">
    
    <appender name="LOGFILE" class="org.apache.log4j.FileAppender">
        <param name="file" value="${user.home}/FRC3620Timeclock/FRC3620Timeclock.log" />
        <param name="append" value="true" />
        <param name="threshold" value="debug" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} %-5p [%c{1}] - %m%n" />
        </layout>
    </appender>
    
    <appender name="SWING" class="com.omniscient.log4jcontrib.swingappender.SwingAppender">
        <param name="threshold" value="debug" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} %-5p [%c{1}] - %m%n" />
        </layout>
    </appender>

    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <param name="Threshold" value="DEBUG" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ABSOLUTE} [%c] %p %m%n" />
        </layout>
    </appender>

    <!--
    need to do a netbeans clean and build when changing this file
    -->

    <!--
    <logger name="org.hibernate">
     <level value="DEBUG" />
    </logger>
    <logger name="org.hibernate.type">
     <level value="DEBUG" />
    </logger>
    <logger name="org.springframework.orm">
     <level value="DEBUG" />
    </logger>
    <logger name="org.apache.commons.dbcp">
     <level value="DEBUG" />
    </logger>
    <logger name="org.hibernate.hql">
     <level value="INFO" />
    </logger>
    -->
    <logger name="org.springframework">
        <level value="INFO" />
    </logger>
    <logger name="org.springframework.jdbc.core">
        <level value="INFO"/>
    </logger>
    <logger name="org.frc3620.timeclock.gui.TimeclockFrame">
        <level value="INFO" />
    </logger>
    <logger name="org.frc3620.timeclock.gui.WorksessionEditForm">
        <level value="INFO" />
    </logger>
    <logger name="org.frc3620">
        <level value="INFO" />
    </logger>

    <!-- Setup the Root category -->
    <root>
        <level value="INFO" />
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="LOGFILE" />
        <appender-ref ref="SWING" />
    </root>
</log4j:configuration>